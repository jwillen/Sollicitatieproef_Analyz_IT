@model Sollicitatieproef.Core.Models.Gebruikers.GebruikerToevoegenViewModel


@{
    ViewBag.Title = "Gebruiker toevoegen";
}


<div>
    <h1>Gebruiker toevoegen</h1>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <form id="add-form" asp-controller="Gebruikers" asp-action="Toevoegen" method="post">
                <div class="form-group row my-2">
                    <label class="col-sm-2" asp-for="Gebruiker.Voornaam"></label>                    
                    <div class="col-sm-3">
                        <input class="form-control" asp-for="Gebruiker.Voornaam" />
                        @Html.ValidationMessageFor(model => model.Gebruiker.Voornaam, "", new { @class = "text-danger"})
                    </div>
                    
                </div>
                <div class="form-group row my-2">
                    <label class="col-sm-2" asp-for="Gebruiker.Naam"></label>
                    <div class="col-sm-3">
                        <input class="form-control" asp-for="Gebruiker.Naam" />
                        @Html.ValidationMessageFor(model => model.Gebruiker.Naam, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group row my-2">
                    <label class="col-sm-2" asp-for="Gebruiker.Emailadres"></label>
                    <div class="col-sm-3">
                        <input class="form-control" asp-for="Gebruiker.Emailadres"/>
                        @Html.ValidationMessageFor(model => model.Gebruiker.Emailadres, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group row my-2">
                    <label class="col-sm-2" asp-for="Gebruiker.Geboortedatum"></label>
                    <div class="col-sm-3">
                        <input class="form-control" asp-for="Gebruiker.Geboortedatum"/>
                        @Html.ValidationMessageFor(model => model.Gebruiker.Geboortedatum, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group row my-2">
                    <div class="col-sm-2">Rechten</div>
                    <div class="col-sm-3">
                        @for (var i = 0; i < Model.Gebruiker.Rechten.Count; i++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"  asp-for="@Model.Gebruiker.Rechten[i].IsToegekend"/>
                                <input type="hidden" asp-for="@Model.Gebruiker.Rechten[i].Id"/>
                                <input type="hidden" asp-for="@Model.Gebruiker.Rechten[i].Omschrijving"/>
                                <label class="form-check-label" asp-for="@Model.Gebruiker.Rechten[i].IsToegekend">@Model.Gebruiker.Rechten[i].Omschrijving</label>
                            </div>
                        }
                        @Html.ValidationMessageFor(model => model.Gebruiker.Rechten, "", new { @class = "text-danger" })
                    </div>
             
                </div>
            </form>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3 offset-sm-2" >
                <button type="submit" form="add-form" class="btn btn-primary">Toevoegen</button>
                <a asp-controller="Gebruikers" asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
            </div>
        </div>
    </div>
</div>
